Function bind_on_screen <Vector2D> (originalPosition:Vector2D,size:Integer) {
	mutable Vector2D result(originalPosition);
	IntegerVector2D resolution(graphics_get_resolution());
	if( result.x - size < 0) {
		result.x = size;
	}
	if( result.y - size < 0) {
		result.y = size;
	}
	if( result.x + size > resolution.x()) {
		result.x = resolution.x() - size;
	}
	if( result.y + size > resolution.y()) {
		result.y = resolution.y() - size;
	}

	return result;
};