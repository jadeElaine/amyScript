mutable Integer experience( 0 );

Function on_update <Boolean> () {
    print("you have " + to_string(experience) + " experience!");
    String entry( lower( input() ) );
    if( entry == "quit" )
    {
        return false;
    }
    if( entry == "win" )
    {
        experience += 100;
    }
    
    return true;
};
